<?xml version="1.0"?>
<openerp>
    <data>
        <record id="view_stock_inventory_report_inherit" model="ir.ui.view">
            <field name="name">stock.inventory.report.inherit</field>
            <field name="model">report.stock.inventory</field>
            <field name="inherit_id" ref="stock.view_stock_inventory_tree"/>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='value']" position="replace"/>
            </field>
        </record>
        
        <record id="view_stock_move_report_inherit" model="ir.ui.view">
            <field name="name">stock.move.report.inherit</field>
            <field name="model">report.stock.move</field>
            <field name="inherit_id" ref="stock.view_stock_tree"/>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='value']" position="replace"/>
            </field>
        </record>
    </data>
</openerp>
